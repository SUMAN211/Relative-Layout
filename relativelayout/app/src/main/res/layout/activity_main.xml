<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/img1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:src="@drawable/spacestation">

            </ImageView>

            <ImageView
                android:id="@+id/img2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:layout_toRightOf="@id/img1"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_flight_24">

            </ImageView>

            <ImageView
                android:id="@+id/img3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:layout_toRightOf="@id/img2"
                android:layout_weight="1"
                android:src="@drawable/spacestation">

            </ImageView>

            <TextView
                android:id="@+id/tvstation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img1"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="100dp"
                android:text="space_station"
                android:textSize="20sp">

            </TextView>

            <TextView
                android:id="@+id/tvflight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img2"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="100dp"
                android:layout_toRightOf="@id/tvstation"
                android:text="flight"
                android:textSize="20sp">

            </TextView>

            <TextView
                android:id="@+id/tvrover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img3"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="100dp"
                android:layout_toRightOf="@id/tvflight"
                android:text="rover"
                android:textSize="20sp">

            </TextView>

            <ImageView
                android:id="@+id/img4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@id/tvstation"
                android:layout_marginLeft="50dp"
                android:src="@mipmap/ic_launcher">

            </ImageView>

            <ImageView
                android:id="@+id/img5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@id/tvrover"
                android:layout_marginLeft="50dp"
                android:layout_toRightOf="@id/img4"
                android:src="@mipmap/ic_launcher">

            </ImageView>

            <ImageView
                android:id="@+id/img6"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_below="@id/tvflight"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:layout_toStartOf="@id/img4"
                android:layout_toEndOf="@id/img5"
                android:src="@color/purple_500">


            </ImageView>

            <Switch
                android:id="@+id/swbar"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/img5"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"
                android:background="@color/purple_500"
                android:text="one_way">

            </Switch>

            <TextView
                android:id="@+id/tvtraveller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/swbar"
                android:layout_marginLeft="40dp"
                android:background="@color/purple_500"
                android:text="traveller"
                android:textSize="20sp">

            </TextView>

        </RelativeLayout>


    </ScrollView>
</layout>